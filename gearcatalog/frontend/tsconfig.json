{
  "compilerOptions": {
    "plugins": [
      { 
        "name": "typescript-tslint-plugin",
        "suppressWhileTypeErrorsPresent": false,
      },
    ],
    "outDir": "./static/frontend",
    "sourceMap": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["./src"]
}
